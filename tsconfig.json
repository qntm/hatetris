{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2019"
    ],
    "jsx": "react",
    "allowJs": true,
    "downlevelIteration": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "./jestSetup.ts"
  ]
}
