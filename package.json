    "cypress": "^15.8.1",
    "esbuild": "^0.27.2",
    "eslint": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "express": "^5.2.0",
    "global-jsdom": "^27.0.0",
    "neostandard": "^0.12.1",
    "react": "^19.0.4",
    "react-dom": "^19.0.4",
    "sinon": "^21.0.0",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.0.3"
  }
