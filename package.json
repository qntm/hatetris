  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "cypress-dev": "start-server-and-test \"npm run start-dev\" http://localhost:3000/hatetris.html \"cypress run\"",
    "cypress-built": "start-server-and-test \"npm run start-built\" http://localhost:3000/hatetris.html \"cypress run\"",
    "eslint": "eslint .",
    "unit": "node --enable-source-maps --import ./register.js --require global-jsdom/register --test --experimental-test-coverage --test-coverage-functions=100 --test-coverage-lines=100 --test-coverage-branches=100 --test-coverage-exclude \"**/*.test.{ts,tsx}\" -- \"**/*.test.{ts,tsx}\"",
    "start-dev": "node scripts/start-dev.js",
    "start-built": "node scripts/start-built.js",
    "test": "npm run eslint && npm run tsc && npm run unit && npm run cypress-dev && npm run build && npm run cypress-built",
    "tsc": "tsc --noEmit"
  },
  "keywords": [
    "tetris"
  ],
  "author": "qntm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qntm/hatetris/issues"
